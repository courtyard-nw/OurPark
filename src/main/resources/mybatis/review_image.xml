<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="review_image">
	
	<insert id="add">
		INSERT INTO review_image
		VALUES (NULL, #{review}, #{placeName}, #{filename}, #{uuid})
	</insert>
	
	<select id="count_img" resultType="Integer">
		SELECT IFNULL(COUNT(place_name), '0')
		FROM review_image
		WHERE place_name=#{placeName}
	</select>
	
	<select id="get_image" resultType="ReviewImage">
		SELECT * FROM review_image
		WHERE place_name=#{placeName}
		ORDER BY code DESC;
	</select>
	
	<delete id="delete">
		DELETE FROM review_image
		WHERE review=#{review}
	</delete>
	
</mapper>